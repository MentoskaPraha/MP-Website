---
import "$globalStyle";
import Page from "@layouts/page.astro";
import Banner from "@components/banners/MainBanner.svelte";
import SocialMedia from "@components/gridLinksLarge.astro";
import Tech from "@components/gridLinksSmall.astro"
import { socialMedia, tech } from "$config";
import type { linkObject } from "$types";
---

<Page
	metaTitle="MP's Website"
	metaDescription="This is the official website of MentoskaPraha. This website functions as a repository of his projects and information about him."
>
	<Banner client:only="svelte" />

	<hr class="m-6 border-white border-2 rounded-full" />

	<div
		class="m-4 mx-auto md:grid md:auto-cols-min md:grid-cols-2 md:items-center md:gap-4"
	>
		<img
			src="/images/about/myPicture.svg"
			alt="Picture of the one and only MentoskaPraha."
			width="288"
			height="288"
			draggable="false"
			class="w-72 h-72 mx-auto mb-3 bg-white md:mb-0 md:mx-0 md:ml-auto rounded-xl"
		/>
		<section class="mx-auto w-76 sm:w-96 md:mx-0 md:mr-auto">
			<h2 class="text-center text-2xl font-bold underline">About Me</h2>
			<p class="text-justify">
				My name is MentoskaPraha, well that's a lie, MentoskaPraha is
				not my actual name, but for the purposes of the internet it's
				good enough. I love video games, the genre generally doesn't
				really matter, I do prefer multiplayer games however, as I love
				playing with my friends. I also do coding, I don't have a
				language that I always use, but I do prefer C++ or Java like
				languages.
			</p>
			<a href="/about" class="underline text-tertiary">See More</a>
		</section>
	</div>

	<hr class="m-6 border-white border-2 rounded-full" />

	<div class="m-4 mx-auto">
		<h2 class="text-center text-2xl font-bold underline">Social Media</h2>
		<SocialMedia links={socialMedia as linkObject[]} />
	</div>

	<hr class="m-6 border-white border-2 rounded-full" />

	<div class="m-4 mx-auto">
		<h2 class="text-center text-2xl font-bold underline">
			Favorite Project
			<Tech links={tech as linkObject[]} />
		</h2>
	</div>

	<hr class="m-6 border-white border-2 rounded-full" />
</Page>
