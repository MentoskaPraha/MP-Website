{
	"extends": "astro/tsconfigs/strict",
	"compilerOptions": {
		"strictNullChecks": true,
		"baseUrl": ".",
		"paths": {
			"@layouts/*": ["src/layouts/*"],
			"@components/*": ["src/components/*"],
			"@styles/*": ["src/styles/*"],
			"@images/*": ["public/images/*"],
			"@assets/*": ["public/assets/*"],
			"$globalStyle": ["src/styles/global.css"],
			"$types": ["src/types.d.ts"],
			"$config": ["src/config.json"]
		}
	}
}
